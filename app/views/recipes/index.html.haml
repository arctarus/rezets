%h1= title _("recipes")
- @categories.each do |category|
  %h2= link_to category.name, category
  - category.recipes.reverse[0..3].each do |recipe|
    = link_to image_tag(recipe.photo.url(:thumb), :class => 'photo', :alt => recipe.name), user_recipe_path(recipe.author, recipe), :title => recipe.title
