%ul#action-links.action-links
  %li#like= render :partial => 'likes', :locals => {:recipe => @recipe, :author => @recipe.author}
  %li= link_to_print @recipe
  %li#send-email= link_to _('email'), email_user_recipe_path(@recipe.author, @recipe), :remote => :true
  %li= link_to_twitter @recipe
  %li= link_to_facebook @recipe
