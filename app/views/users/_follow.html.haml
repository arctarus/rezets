- unless current_user.nil?
  - if not current_user.followings.include?(user)
    = form_for @user, :url => follow_user_path(user), :remote => true do |f|
      = f.submit _("follow"), :class => 'follow'
  - else
    = form_for @user, :url => unfollow_user_path(user), :remote => true do |f|
      = f.submit _("unfollow"), :class => 'unfollow'
