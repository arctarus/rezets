- title user_title(@user,@category, @recipes.current_page)
- meta_description user_title(@user,@category, @recipes.current_page)
- meta_keywords [@user.name]

- content_for :sidebar do
  = render :partial => 'users/sidebar'

- if @recipes.empty?
  - if current_user.nil? or @user != current_user
    .msg.blank
      %h2= _("%{user} still hasn't any recipe") % {:user => @user.name}
      %p= raw(("you can %{explore} or search %{bycategory}.") % {                  |
          :explore => link_to(_("explore more recipes"), recipes_path),        |
          :bycategory => link_to(_("recipes by categories"), categories_path)}) |
  - else
    = render :partial => 'welcome'

- else
  - if current_user == @user
    %p= link_to _('create a new recipe'), new_user_recipe_path(current_user)

  %ul.recipes
    = render @recipes
  = will_paginate @recipes

  = render :partial => 'feed'
