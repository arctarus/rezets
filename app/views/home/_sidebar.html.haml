%h2
  %span= _("Recipes")
- unless @categories.blank?
  %ul
    - @categories.each do |category|
      %li
        = link_to category.name, category

- unless @users.empty?
  .users
    %h2= _("Featured users")
    %ul.featured-users
      - @users.each do |user|
        %li.user
          = link_to image_tag(user.avatar.url(:medium), :class => "avatar", :alt => "", :width => "40px"), user
          %p= link_to user.name, user
          %p.meta
            = _("%{num} recipes") % {:num => user.recipes.size}
            %span.ft= '|'
            = link_to_unless user.followings.size == 0, n_("%{num} following", "%{num} followings", user.followings.size) % {:num => user.followers.size}, following_user_path(user)

