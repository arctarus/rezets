%h3= _("Recipes")
%ul
  - for category in categories
    %li
      - if user
        = link_to_unless_current category.name, [user,category],
          :title => _("%{category} recipes") % {:category => category.name}
        %span.counter (#{user.recipes.by_category(category.id).count})
      - else
        = link_to_unless_current category.name, category,
          :title => _("%{category} recipes") % {:category => category.name}
        %span.counter (#{category.recipes.size})
  %li
    - if user
      = link_to_unless_current _("all"), user
      %span.counter (#{user.recipes.size})
    - else
      = link_to_unless_current _("all"), recipes_path
      %span.counter
        (#{Recipe.count})
