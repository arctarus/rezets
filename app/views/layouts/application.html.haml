!!! 5
%html{:lang => "es"}
  %head
    %title= title
    %meta{:content => "text/html;charset=UTF-8", "http-equiv" => "content-type"}/
    %meta{:content => "index,follow", :name => "robots"}/

    - if content_for? :meta_description
      %meta{:content => yield(:meta_description), :name => "description"}

    - if content_for? :meta_keywords
      %meta{:content => yield(:meta_keywords), :name => "keywords"}

    - if content_for? :feed
      = yield :feed

    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Lobster'
    = stylesheet_link_tag 'application.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    /[if lt IE 7]
      = stylesheet_link_tag 'ie6.css', :media => 'screen, projection'

    = javascript_include_tag :application

    %script{id:'ingredient-list-template', type:'text/template'}
      :plain
        <ul class="ingredients-list">
        </ul>

    %script{id:'ingredient-template', type:'text/template'}
      :plain
        <li><%= name %></li>

  %body
    #header
      .wrapper
        #nav= render :partial => "shared/nav"
        = render :partial => "shared/header"
        = render :partial => "shared/search"

    #wrapper

      - if content_for? :top
        #top
          = yield :top

      #main
        - if notice
          %p#message.notice= notice

        = yield

      - if content_for? :sidebar
        #sidebar
          = yield :sidebar

    #footer
      = render :partial => "shared/footer"

    = render :partial => "shared/scripts"
