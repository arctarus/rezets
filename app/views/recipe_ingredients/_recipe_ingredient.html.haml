- ri = recipe_ingredient

- if ri.present?
  %li.ingredient

    - if ri.value or ri.value_type
      %span.amount
        = round ri.value if ri.value
        = ri.value_type
      - if ri.value_type.present?
        %span.ft= _("of")

    %span.name= ri.ingredient.name

    %span{:title => ri.comment}= truncate ri.comment, :length => 30
    - if ri.optional
      %span.ft (#{_("optional")})
